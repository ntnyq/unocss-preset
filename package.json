{
  "name": "@ntnyq/unocss-preset",
  "private": true,
  "packageManager": "pnpm@8.7.6",
  "license": "MIT",
  "scripts": {
    "build": "run-s clean build:lib",
    "build:lib": "pnpm -r --filter=./packages/* run build",
    "build:play": "pnpm -C playground run build",
    "clean": "rimraf packages/*/dist",
    "coverage": "vitest --coverage",
    "dev": "pnpm -r --filter=./packages/* run dev",
    "lint": "eslint . --cache",
    "play": "pnpm -C playground run dev",
    "prepare": "husky install",
    "publish": "pnpm build && changeset publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@ntnyq/eslint-config": "^1.13.0",
    "@ntnyq/prettier-config": "^1.13.0",
    "@types/fs-extra": "^11.0.2",
    "@vitest/coverage-v8": "^0.34.4",
    "eslint": "^8.49.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "pnpm": "^8.7.6",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2",
    "unbuild": "^1.2.1",
    "vitest": "^0.34.4"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,json,md,yml,yaml}": "eslint --fix"
  }
}
