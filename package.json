{
  "name": "@ntnyq/unocss-preset",
  "private": true,
  "packageManager": "pnpm@8.12.1",
  "license": "MIT",
  "scripts": {
    "build": "run-s clean build:lib",
    "build:lib": "pnpm -r --filter=./packages/* run build",
    "build:play": "pnpm -C playground run build",
    "clean": "rimraf packages/*/dist",
    "coverage": "vitest --coverage",
    "dev": "pnpm -r --filter=./packages/* run dev",
    "lint": "eslint . --cache",
    "play": "pnpm -C playground run dev",
    "prepare": "husky install",
    "publish": "pnpm build && changeset publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@ntnyq/eslint-config": "^1.20.0",
    "@ntnyq/prettier-config": "^1.20.0",
    "@types/fs-extra": "^11.0.4",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "pnpm": "^8.12.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vitest": "^1.1.0"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,json,md,yml,yaml}": "eslint --fix"
  }
}
